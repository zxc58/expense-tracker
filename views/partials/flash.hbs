<br/>
{{#if successMessage}}
  <div class="alert alert-success alert-dismissible fade show d-flex" role="alert">
    {{{successMessage}}}
    <button type="button" class="close ms-auto" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}
{{#if warningMessage}}
  <div class="alert alert-warning alert-dismissible fade show d-flex" role="alert">
    {{{warningMessage}}}
    <button type="button" class="close ms-auto" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}
<h1>Sign Up</h1>
<form action="/user/signup" method="POST" >
  <fieldset>
      <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter name" required >
    </div>
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password1" class="form-control" id="password1" placeholder="Password" required > 
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Sign up</button>
  </fieldset>
</form>